    <p><h3>Teknosa,GittiGidiyor,Vatan Bilgisayar <br />Telefon Karşılaştırma Sitesi <br />Uygulaması</h3></p>
</div>

<div class="container">
    <form asp-action="Search" asp-controller="Home">
        <div class="row height d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="form">
                    @Html.TextBoxFor(m=>m.Request.Query)
                </div>
            </div>

            <div class="col-md-6">
                <div>
                    <input type="submit" value="Ara" />
                </div>
            </div>
        </div>
